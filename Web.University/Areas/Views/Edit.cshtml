@section Scripts
{
<script>
    $(function () {

        $("#FilterLogic").on('input', function () {
            
            if ($(this).val()) {
                $('.and').hide();
            } else {
                $('.and').show();
            }

        });

        if ($("#FilterLogic").val()) {
            $('.and').hide();
        }
    });
</script>
}
