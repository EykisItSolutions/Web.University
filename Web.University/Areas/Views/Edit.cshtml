                <td class="width-60">&nbsp;</td>
                <td xclass="width-170">Column</td>
                <td xclass="width-140">Direction</td>
                <td class="width-80"></td>
            </tr>

            @for (int i = 0; i < 2; i++)
            {
                <tr>
