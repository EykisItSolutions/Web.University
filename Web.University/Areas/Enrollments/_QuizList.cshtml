@model Web.University.Areas.Enrollments.Detail

<div class="bg-white pt-15">

    <table class="table table-hover table-sm table-list">

        <tr>
            <th>Quiz</th>
            <th>Quiz Date</th>
            <th>Grade</th>
            <th>&nbsp;</th>
        </tr>

        @if (Model!.Quizzes.Count() == 0)
        {
            <tr><td colspan="7" class="no-items">No items to display</td></tr>
        }

        @foreach (var quiz in Model.Quizzes)
        {
            <tr>
                <td>@quiz.QuizNumber</td>
                <td>@quiz.QuizDate</td>
                <td>@quiz.Grade</td>
                <td class='text-end'>
                    <a class="btn btn-xs btn-light js-confirm" href="/quizzes/delete/@quiz.EnrollmentId" data-id="@quiz.Id" data-word="Delete" related-count="0" related-message=''>Delete</a>&nbsp; &nbsp;
                </td>

            </tr>
        }

    </table>
</div>


